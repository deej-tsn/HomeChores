extends layout

block title
    title #{title}




block content
    .content_div
        .form
            form(action="#" method="POST" class="form-registration")
                label(for="chores" class = "padding") Chores :
                select(name="chore" id="chores" class="padding margin")
                    for chore in chores 
                        option(value=chore.chore_id) #{chore.chore_name}
                input(
                    type="submit"
                    value="Submit"
                    class="btn btn-lg btn-primary btn-block margin"
                )