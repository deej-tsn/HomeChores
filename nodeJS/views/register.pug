extends layout

block content
  -data = data || {}

  if errors
    ul.my-errors
      for error in errors
        li= error.msg

    
  form(action="#" method="POST" class="form-registration")
    label(for="first_name") First Name:
    input(
      type="text"
      id="first_name"
      name="first_name"
      class="form-control"
      required
    )
    label(for="second_name") Second Name:
    input(
      type="text"
      id="second_name"
      name="second_name"
      class="form-control"
      required 
    )

    label(for="email") Email:
    input(
      type="email"
      id="email"
      name="email"
      class="form-control"
      required
    )
    label(for="password") Password
    input(
      type="text"
      id="password"
      name="password"
      class="form-control"
      required
    )
    input(
      type="submit"
      value="Submit"
      class="btn btn-lg btn-primary btn-block"
    )