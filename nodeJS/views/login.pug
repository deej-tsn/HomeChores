extends layout

block title
    title #{title}

block content
    form(action="/login" method="POST" class="form-registration")
        label(for="email") Email:
        input(
        type="email"
        id="email"
        name="email"
        class="form-control"
        required
        )
        label(for="password") Password
        input(
        type="password"
        id="password"
        name="password"
        class="form-control"
        required
        )
        input(
        type="submit"
        value="Submit"
        class="btn btn-lg btn-primary btn-block"
        )
    a(href="/register") Register 

    h1 ERROR
    if locals.messages.error
        p= messages.error
        
